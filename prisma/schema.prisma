model DesignElement {
  id             String        @id @default(cuid())
  postId         String
  Post           Post          @relation(fields: [postId], references: [id], onDelete: Cascade)
  content        String?       @db.Text
  designPhase    DesignPhases? @relation(fields: [designPhasesId], references: [id])
  designPhasesId String?

  @@index([postId])
  @@index([designPhasesId])
}

model DesignPhases {
  id            String          @id @default(cuid())
  name          String?
  phaseId       Int?            @unique
  parentPhaseId Int?
  // parentPhase   DesignPhases?   @relation("ParentChild", fields: [parentPhaseId], references: [phaseId], onDelete: NoAction, onUpdate: NoAction)
  // childPhase    DesignPhases[]  @relation("ParentChild")
  Resources     String?         @db.Text
  DesignElement DesignElement[]
  phaseOrder    Int?

  @@index([parentPhaseId])
}

